<h1>Admin</h1>
<%= @menu %>

  <h2>Convert a YAML report</h2>
  <form action='/<%= the_url_prefix %>admin/convert' method=post enctype='multipart/form-data' class="pure-form">
  Old YAML file: <input name='file' type='file' accept='.yml' required /> <input type='submit' value="Convert"" class="pure-button pure-button-primary" />
  </form>

  <h2>Create a new report</h2>
<p>
  <a href="/<%= the_url_prefix %>admin/new" >Create new</a>
</p>

  <h2>Edit a report</h2>
<ol>
  <% @rpt_list.each do |report| %>
    <li><a href='/<%= the_url_prefix %>admin/edit/<%=report[:id] %>'>edit</a> <%= report[:caption] %></li>
  <% end %>
</ol>
